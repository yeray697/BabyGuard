<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clCalendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ncatz.babyguard.components.CustomToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbarCalendarParent"
        android:elevation="4dp"/>
    <com.ncatz.yeray.calendarview.DiaryCalendarView
        android:layout_below="@id/toolbarCalendarParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendar"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAdd_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_fab"
        android:src="@drawable/ic_add_white_24dp"/>
</RelativeLayout>

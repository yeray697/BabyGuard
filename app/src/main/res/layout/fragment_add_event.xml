<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ncatz.babyguard.components.CustomToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_addEvent">

        <ImageView
            android:id="@+id/backButton_AddEvent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back_white"
            android:layout_marginRight="7dp"
            android:scaleType="fitCenter"/>
    </com.ncatz.babyguard.components.CustomToolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_addEvent"
        android:layout_margin="20dp">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvTitle1_AddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="19sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="start" />
        <EditText
            android:id="@+id/etTitle_AddEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="agasgasg"
            android:layout_alignBaseline="@+id/tvTitle1_AddEvent"
            android:layout_alignBottom="@+id/tvTitle1_AddEvent"
            android:layout_toRightOf="@+id/tvDescription1_AddEvent"
            android:layout_toEndOf="@+id/tvDescription1_AddEvent"  />


        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@id/etTitle_AddEvent"
            android:id="@+id/tvDescription1_AddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:text="Description:"
            android:textSize="19sp" />
        <EditText
            android:layout_marginLeft="15dp"
            android:text="agasgasg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etDescrition_AddEvent"
            android:layout_below="@id/etTitle_AddEvent"
            android:layout_alignBaseline="@+id/tvDescription1_AddEvent"
            android:layout_alignBottom="@+id/tvDescription1_AddEvent"
            android:layout_toRightOf="@+id/tvDescription1_AddEvent"
            android:layout_toEndOf="@+id/tvDescription1_AddEvent" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tvDate1_addEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:clickable="true"
            android:textSize="19sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/etDescrition_AddEvent"
            android:gravity="start"/>
        <TextView
            android:id="@+id/tvDate2_addEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:clickable="true"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_alignBaseline="@+id/tvDate1_addEvent"
            android:layout_alignBottom="@+id/tvDate1_addEvent"
            android:layout_below="@+id/etDescrition_AddEvent"
            android:layout_alignLeft="@+id/etTitle_AddEvent"
            android:layout_alignStart="@+id/etTitle_AddEvent"
            android:layout_toRightOf="@+id/tvDescription1_AddEvent"
            android:layout_toEndOf="@+id/tvDescription1_AddEvent"  />
        <LinearLayout
            android:id="@+id/llButtons_AddEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/btCancel_AddEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/btSubmit_AddEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tvDate1_addEvent"
            android:layout_above="@id/llButtons_AddEvent"
            android:background="@color/calendar_background"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the class(es) to add events:"
                android:textSize="19sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>